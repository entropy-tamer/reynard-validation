{
  "name": "reynard-validation",
  "version": "0.2.0",
  "description": "Data validation and schema management",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./dist/schemas/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && rm -f tsconfig.tsbuildinfo && tsc -p tsconfig.json --declaration --noEmit false",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:check": "vitest run --coverage --reporter=verbose",
    "test:docs": "vitest run --config vitest.docs.config.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "clean": "rm -rf dist",
    "json:fix": "tsx src/cli/json-fixer.ts",
    "json:check": "tsx src/cli/json-fixer.ts --check",
    "json:fix-all": "tsx src/cli/json-fixer.ts --all --fix"
  },
  "dependencies": {
    "solid-js": "1.9.9"
  },
  "devDependencies": {
    "@solidjs/testing-library": "0.8.10",
    "@types/node": "24.9.1",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "happy-dom": "20.0.0",
    "@entropy-tamer/reynard-testing": "^0.44.4",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vite": "7.1.9",
    "vite-plugin-solid": "2.11.9",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "solid-js": "1.9.9"
  },
  "license": "MIT",
  "keywords": [
    "validation",
    "schema",
    "typescript"
  ],
  "homepage": "https://github.com/entropy-tamer/reynard-validation",
  "bugs": "https://github.com/entropy-tamer/reynard-validation/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/entropy-tamer/reynard-validation.git"
  }
}
